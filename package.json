    "is-ci": "4.1.0",
    "lint-staged": "16.2.7",
    "postcss": "8.5.6",
    "prettier": "3.8.1",
    "prettier-plugin-packagejson": "3.0.0",
    "prettier-plugin-tailwindcss": "0.7.2",
    "@biomejs/biome": "2.4.2",
    "sort-package-json": "3.6.1",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-mkcert": "1.17.9",

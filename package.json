    "is-ci": "4.1.0",
    "lint-staged": "16.1.2",
    "postcss": "8.5.6",
    "prettier": "3.5.3",
    "prettier-plugin-packagejson": "2.5.15",
    "prettier-plugin-tailwindcss": "0.6.12",
    "@biomejs/biome": "1.9.4",
    "sort-package-json": "3.2.1",
    "tailwindcss": "4.1.10",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "vite-plugin-mkcert": "1.17.8",

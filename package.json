{
  "name": "template-vite-solid-ts",
  "version": "0.0.0-development",
  "description": "",
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "preinstall": "npx only-allow pnpm",
    "prepare": "is-ci || husky install",
